{
  "compilerOptions": {
    "rootDir": ".",
    "strict": false,
    "module": "esnext",
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "build/main/types",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "build/main",
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": []
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
